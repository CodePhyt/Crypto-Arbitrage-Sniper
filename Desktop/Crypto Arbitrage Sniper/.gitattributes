# Git attributes for cross-platform compatibility

# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Dart files
*.dart text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch files (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.ico binary
*.wav binary
*.mp3 binary
*.pdf binary

# Flutter generated files
*.g.dart text
*.freezed.dart text
*.gr.dart text
