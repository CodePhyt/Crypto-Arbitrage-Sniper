{
  "name": "clawd-secure",
  "version": "1.0.0",
  "description": "Hardened enterprise-grade autonomous agent with Zero Trust architecture",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:storage": "npm run build && node dist/core/memory/storage.test.js",
    "test:smoke": "npm run build && node dist/tests/smoke-test.js",
    "install:secure": "bash scripts/secure-install.sh",
    "docker:build": "docker build -t clawd-secure:latest .",
    "docker:up": "docker-compose -f docker-compose.secure.yml up -d",
    "docker:down": "docker-compose -f docker-compose.secure.yml down",
    "docker:logs": "docker-compose -f docker-compose.secure.yml logs -f clawd-secure",
    "security:check": "docker-compose -f docker-compose.secure.yml config"
  },
  "keywords": [
    "autonomous-agent",
    "zero-trust",
    "security",
    "docker",
    "hardened"
  ],
  "author": "Clawd Secure Team",
  "license": "MIT",
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}